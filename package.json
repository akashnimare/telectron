{
  "name": "telectron",
  "productName": "Telectron",
  "version": "0.0.1",
  "description": "Telegram desktop client",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashnimare/telectron"
  },
  "author": {
    "name": "akashnimare",
    "email": "svnitakash@gmail.com",
    "url": "http://akashnimare.in"
  },
  "bugs": {
    "url": "https://github.com/akashnimare/telectron/issues"
  },
  "keywords": [
    "electron",
    "electron-app",
    "telegram",
    "messenger"
  ],
  "main": "app/main/index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "yarn install && electron ./app/main",
    "pack": "build --dir",
    "dist": "build",
    "build:win": "build --win nsis-web --ia32 --x64",
    "travis": "cd ./scripts && ./travis-build-test.sh"
  },
  "build": {
    "appId": "org.akashnimare.telectron",
    "asar": true,
    "files": [
      "**/*",
      "!node_modules/@paulcbetts/cld/deps/cld${/*}"
    ],
    "copyright": "Â©2017 Akashnimare",
    "mac": {
      "category": "public.app-category.chat",
      "identity": null
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icion.ico"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false
    }
  },
  "dependencies": {
    "configstore": "3.0.0",
    "electron-spellchecker" : "1.0.6",
    "electron-debug": "1.1.0"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "1.6.2",
    "electron-connect": "^0.4.6",
    "electron-builder": "16.7.1",
    "gulp": "^3.9.1",
    "xo": "*",
    "gulp-mocha": "^3.0.1",
    "spectron": "^3.3.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}