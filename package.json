{
  "name": "telectron",
  "productName": "telectron",
  "version": "0.0.1",
  "description": "Telegram desktop client",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashnimare/telectron"
  },
  "author": {
    "name": "akashnimare",
    "email": "svnitakash@gmail.com",
    "url": "http://akashnimare.in"
  },
  "bugs": {
    "url": "https://github.com/akashnimare/telectron/issues"
  },
  "main": "app/main/index.js",
  "keywords": [
    "electron",
    "electron-app",
    "telegram"
  ],
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "yarn install && electron ./app",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "org.akashnimare.telectron",
    "mac": {
      "category": "public.app-category.chat"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "configstore": "3.0.0",
    "electron-context-menu": "0.8.0",
    "electron-debug": "1.1.0"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "1.6.2",
    "electron-connect": "^0.4.6",
    "electron-builder": "16.7.1",
    "gulp": "^3.9.1",
    "xo": "*",
    "gulp-mocha": "^3.0.1",
    "spectron": "^3.3.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
